</div>
<div class="container col-md-8">
    <div class="col-md-8" style="margin-top:50px;">
        <select name="class" id="class">
            <%for(var i=0;i<data.length;i++){%>
            <option value="<%=data[i].class%>"><%=data[i].class%></option>
            <%}%>
        </select>
        <input type="text" id="text">
        <button type="button" class="btn btn-danger" id="sou">搜索</button>
    </div>

    <div class="btn-group col-md-8" role="group" aria-label="..." id="btn_group">

        <button type="button" class="btn btn-default  btn-info" data-toggle="modal" data-target="#amend" id="amendOne">编辑</button>
        <button type="button" class="btn btn-danger" id="del">删除</button>
    </div>

    <table class="table table-bordered ">
        <thead>
        <tr>
            <th></th>
            <th>id</th>
            <th>标题</th>
            <th>分类</th>
            <th>价格</th>
            <th>推荐</th>
            <th>热销</th>
            <th>状态</th>
        </tr>
        </thead>
        <tbody id="tbody">
        <%
        for(var i=0;i<result.length;i++){
        %>
        <tr>
            <th><input type="radio" name="check" class="gou" data-id="<%=result[i].id%>"></th>
            <th><%=i+1%></th>
            <th><%=result[i].shop%>
                <br>
                <div class="pics">
                <img src="/<%= result[i].image%>.jpg" alt="">
                </div>
            </th>
            <th><%=result[i].class%></th>
            <th><%=result[i].money%></th>
            <th><%if(result[i].quality){%>
                √
            <%}else{%>
                ×
            <%}%></th>
            <th><%if(result[i].hot){%>
                √
                <%}else{%>
                ×
                <%}%></th>
            <th><%if(result[i].states){%>
                √
                <%}else{%>
                ×
                <%}%></th>

        </tr>

        <%
        }
        %>
        </tbody>
    </table>

    <!--//修改-->
    <div class="modal fade" id="amend" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">编辑分类</h4>
                </div>
                <div class="modal-body">
                    <p>商品名：
                        <input type="text" name="shop"/>
                    </p>
                    <p>价格：
                        <input type="text" name="money"/>
                    </p>
                    <p>类型：
                        <input type="text" name="type" id="class"/>
                    </p>
                    <p>描述：
                        <textarea name="content" id="cont" style="width:200px;height: 50px;"></textarea>
                    </p>
                    <!--<p>状态：-->
                        <!--true:<input type="radio" name="state">-->
                        <!--false:<input type="radio" name="state">-->
                    <!--</p>-->

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
                    <button type="button" class="btn btn-primary" id="amendbtn">ok</button>
                </div>

            </div>
        </div>
    </div>
    <div id="pagenavbox"></div>


</div>

<script src="js/jquery-1.12.3.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="/js/PageNav.js"></script>

<script>

    // //删除
    $("#del").click(function(){
        var id=$("input[name=check]:checked").data("id");
        // console.log(id);
        $("input[name=check]:checked").parent("th").parent("tr").remove();
        $.post("/delshoplist/"+id,function(data){
            if(data.result==1){
                alert("删除成功");
            }
        })
    })

    //点击编辑渲染数据
    $("#amendOne").click(function(){
        var id=$("input[name=check]:checked").data("id");

        $.ajax({
            "url":"/amendlist/"+id,
            "type":"post",
            "success":function(data){
                // console.log(data);
                var data=data.result[0];
                $("#amend .modal-dialog .modal-body input[name=shop]").val(data.shop);
                $("#amend .modal-dialog .modal-body input[name=type]").val(data.class);
                $("#amend .modal-dialog .modal-body input[name=money]").val(data.money);
                $("#cont").val(data.content);

            }
        })

        // $.post("/amend/"+id,{"id":$("input[name=user]").val(),"check":"0","user":$("input[name=user]").val(),"sex":$("input[name=xingbie]:checked").val(),"state":$("option:selected").val(),"hobby":$("input[name=hobby]").val(),"marriage":$("input[name=marriage]").val(),"bir":$("input[name=bir]").val(),"address":$("input[name=address]").val()},function(data){
        //     if(data.result==1){
        //         alert("编辑成功");
        //     }
        // })
    })
    //点击ok  更新数据
    $("#amendbtn").click(function(){
        var id=$("input[name=check]:checked").data("id");
        // console.log($("#type").val());
        $.post("/updateshoplist/"+id,{"shop":$("#amend .modal-dialog .modal-body input[name=shop]").val(),"class": $("#amend .modal-dialog .modal-body input[name=type]").val(),"money":$("#amend .modal-dialog .modal-body input[name=money]").val(),"content":$("#cont").val()},function(data){
            if(data.result==1){
                alert("更改成功");
                window.location="/shoplist";
            }
        })
    })

    $.get("/Allshop?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });

        gotopage(1);

        function gotopage(pagenumber){
            //清空
            $("#tbody").empty();

            //获得新的数据
            $.get("/Allshop?page=" + pagenumber,function(data){
                // console.log(data);
                $.each(data.results,function(i, n){
                    console.log(n);
                    var state;
                    if(n.states=="true"){
                        state="√";
                    }else{
                        state="×";
                    };
                    var quality;
                    if(n.quality=="true"){
                        quality="√";
                    }else{
                        quality="×";
                    }
                    var hot;
                    if(n.hot=="true"){
                        hot="√";
                    }else{
                        hot="×";
                    }

                    //创建一个tr标签
                    // console.log(i,n);
                    $tr = $("<tr></tr>");
                    $("<th><input type='radio' name='check' class='gou' data-id='"+n._id+"'></th>").appendTo($tr);
                    $("<th></th>").html(i+1).appendTo($tr);
                    $("<th>"+n.shop+"<div class='pics'><img src='/"+n.image+".jpg'</th></div>").appendTo($tr);
                    $("<th></th>").html(n.class).appendTo($tr);
                    $("<th></th>").html(n.money).appendTo($tr);
                    $("<th></th>").html(quality).appendTo($tr);
                    $("<th></th>").html(hot).appendTo($tr);
                    $("<th></th>").html(state).appendTo($tr);
                    //上树
                    $tr.appendTo($("#tbody"));
                });
            });
        }
    });

    //搜索
    $("#class").change(function(){
        // console.log($(this).val());
        $("#text").val($(this).val());
    })

    $("#sou").click(function () {
        $("#tbody").empty();
        $("#pagenavbox").css("display","none");
        $.post("/getcont/"+$("#text").val(),function(data){
            console.log(data);
            $.each(data.result,function(i, n){
                console.log(n);
                var state;
                if(n.states=="true"){
                    state="√";
                }else{
                    state="×";
                };
                var quality;
                if(n.quality=="true"){
                    quality="√";
                }else{
                    quality="×";
                }
                var hot;
                if(n.hot=="true"){
                    hot="√";
                }else{
                    hot="×";
                }

                //创建一个tr标签
                // console.log(i,n);
                $tr = $("<tr></tr>");
                $("<th><input type='radio' name='check' class='gou' data-id='"+n._id+"'></th>").appendTo($tr);
                $("<th></th>").html(i+1).appendTo($tr);
                $("<th>"+n.shop+"<div class='pics'><img src='/"+n.image+".jpg'</th></div>").appendTo($tr);
                $("<th></th>").html(n.class).appendTo($tr);
                $("<th></th>").html(n.money).appendTo($tr);
                $("<th></th>").html(quality).appendTo($tr);
                $("<th></th>").html(hot).appendTo($tr);
                $("<th></th>").html(state).appendTo($tr);
                //上树
                $tr.appendTo($("#tbody"));
            });
        })
    })

    /* 滑动/展开 */
    $("ul.expmenu li > div.header").click(function(){

        var arrow = $(this).find("span.arrow");

        if(arrow.hasClass("up")){
            arrow.removeClass("up");
            arrow.addClass("down");
        }else if(arrow.hasClass("down")){
            arrow.removeClass("down");
            arrow.addClass("up");
        }

        $(this).parent().find("ul.menu").slideToggle();

    });
</script>

</body>
</html>
